<!-- Main Alert Container -->
<div id="mainAlertContainer" class="main-alert-container"></div>

<style>
.sidebar {
  width: var(--sidebar-width);
  background-color: var(--color-module-bg);
  border-radius: var(--border-radius-xl);
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  padding: 25px 0;
  flex-shrink: 0;
}

.sidebar-icon {
  width: 50px;
  height: 50px;
  display: flex;
  justify-content: center;
  align-items: center;
  cursor: pointer;
  transition: var(--transition-fast);
  border-radius: var(--border-radius-sm);
}

.sidebar-icon:hover {
  background-color: rgba(255, 255, 255, 0.1);
}

.sidebar-icon svg {
  width: 28px;
  height: 28px;
  fill: var(--color-text-white);
}

/* FAB Container */
.sidebar-fab-container {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.sidebar-fab {
  position: relative;
  z-index: 10;
  transition: var(--transition-normal);
}

.sidebar-fab.active {
  background-color: var(--color-gold);
  transform: rotate(45deg);
}

.sidebar-fab.active svg {
  fill: var(--color-bg-primary);
}

.sidebar-fab-options {
  position: absolute;
  bottom: 100%;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 10px;
  padding-bottom: 15px;
  opacity: 0;
  visibility: hidden;
  pointer-events: none;
  transition: all var(--transition-normal);
}

.sidebar-fab-container.active .sidebar-fab-options {
  opacity: 1;
  visibility: visible;
  pointer-events: auto;
}

.sidebar-fab-option {
  display: flex;
  align-items: center;
  gap: 12px;
  background-color: var(--color-accent-red);
  border: none;
  border-radius: var(--border-radius-md);
  padding: 12px 16px;
  cursor: pointer;
  white-space: nowrap;
  color: var(--color-text-white);
  font-family: inherit;
  font-size: 13px;
  font-weight: 500;
  box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
  transform: translateY(20px) scale(0.8);
  opacity: 0;
  transition: all var(--transition-normal);
}

.sidebar-fab-container.active .sidebar-fab-option {
  transform: translateY(0) scale(1);
  opacity: 1;
}

.sidebar-fab-option:hover {
  background-color: #b91c1c;
  transform: translateY(-2px) scale(1.02);
  box-shadow: 0 6px 20px rgba(0, 0, 0, 0.4);
}

.sidebar-fab-option svg {
  width: 20px;
  height: 20px;
  fill: var(--color-text-white);
  flex-shrink: 0;
}

/* Icon Only FAB */
.sidebar-fab-icon-only {
  padding: 14px;
  border-radius: 50%;
  width: 52px;
  height: 52px;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
}

.sidebar-fab-icon-only svg {
  width: 24px;
  height: 24px;
}

.fab-tooltip {
  position: absolute;
  left: calc(100% + 12px);
  top: 50%;
  transform: translateY(-50%);
  background: rgba(10, 23, 68, 0.95);
  backdrop-filter: blur(10px);
  color: var(--color-text-white);
  padding: 10px 16px;
  border-radius: var(--border-radius-sm);
  font-size: 13px;
  font-weight: 500;
  white-space: nowrap;
  opacity: 0;
  visibility: hidden;
  pointer-events: none;
  transition: all var(--transition-fast);
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
  border: 1px solid rgba(201, 162, 39, 0.3);
}

.sidebar-fab-icon-only:hover .fab-tooltip {
  opacity: 1;
  visibility: visible;
}

/* Main Alert */
.main-alert-container {
  position: fixed;
  top: 20px;
  right: 20px;
  z-index: 2000;
  display: flex;
  flex-direction: column;
  gap: 10px;
  max-width: 400px;
}

/* Responsive */
@media (max-width: 768px) {
  .sidebar {
    width: 60px;
    padding: 20px 0;
  }

  .sidebar-icon {
    width: 40px;
    height: 40px;
  }

  .sidebar-icon svg {
    width: 22px;
    height: 22px;
  }
}

@media (max-width: 576px) {
  .sidebar {
    width: 100%;
    flex-direction: row;
    border-radius: var(--border-radius-md);
    padding: 10px 20px;
    order: 2;
    position: fixed;
    bottom: 10px;
    left: 10px;
    right: 10px;
    z-index: 100;
    box-shadow: 0 -5px 20px rgba(0, 0, 0, 0.3);
  }

  .sidebar-fab-container {
    flex-direction: row;
  }

  .sidebar-fab-options {
    bottom: auto;
    left: auto;
    right: 100%;
    top: 50%;
    transform: translateY(-50%);
    flex-direction: row;
    padding-bottom: 0;
    padding-right: 15px;
  }
}
</style>

<script>
// FAB Toggle
function initSidebarFab() {
  const fab = document.getElementById('sidebarFab');
  const fabContainer = document.querySelector('.sidebar-fab-container');
  const ticketBtn = document.getElementById('ticketBtn');

  if (fab && fabContainer) {
    fab.addEventListener('click', (e) => {
      e.stopPropagation();
      fabContainer.classList.toggle('active');
      fab.classList.toggle('active');
    });
  }

  if (ticketBtn) {
    ticketBtn.addEventListener('click', (e) => {
      e.stopPropagation();
      closeSidebarFab();
      showTicketAlert();
    });
  }

  // Close FAB when clicking outside
  document.addEventListener('click', (e) => {
    const target = e.target as HTMLElement;
    if (fabContainer && !fabContainer.contains(target)) {
      closeSidebarFab();
    }
  });

  // Close FAB on Escape
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape') {
      closeSidebarFab();
    }
  });
}

function closeSidebarFab() {
  const fabContainer = document.querySelector('.sidebar-fab-container');
  const fab = document.getElementById('sidebarFab');
  if (fabContainer) fabContainer.classList.remove('active');
  if (fab) fab.classList.remove('active');
}

function showTicketAlert() {
  let alertContainer = document.getElementById('mainAlertContainer');
  if (!alertContainer) {
    alertContainer = document.createElement('div');
    alertContainer.id = 'mainAlertContainer';
    alertContainer.className = 'main-alert-container';
    document.body.appendChild(alertContainer);
  }

  const alertId = Date.now();
  const alert = document.createElement('div');
  alert.className = 'main-alert main-alert-success';
  alert.setAttribute('data-alert-id', alertId.toString());
  alert.innerHTML = `
    <div class="main-alert-icon">
      <svg viewBox="0 0 24 24"><path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/></svg>
    </div>
    <div class="main-alert-content">
      <div class="main-alert-title">Incidente Registrado</div>
      <div class="main-alert-message">Un administrador se pondr√° en contacto contigo pronto.</div>
    </div>
    <button class="main-alert-close" onclick="this.parentElement.remove()">
      <svg viewBox="0 0 24 24"><path d="M19 6.41L17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12z"/></svg>
    </button>
  `;

  alertContainer.appendChild(alert);

  setTimeout(() => {
    alert.classList.add('hiding');
    setTimeout(() => alert.remove(), 300);
  }, 5000);
}

document.addEventListener('DOMContentLoaded', initSidebarFab);
</script>
