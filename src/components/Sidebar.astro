      <path d="M10 20v-6h4v6h5v-8h3L12 3 2 12h3v8z"/>
    </svg>
  </div>

  <!-- Floating Action Button with Expandable Menu -->
  <div class="sidebar-fab-container">
    <!-- Expandable Options (hidden by default) -->
    <div class="sidebar-fab-options" id="sidebarFabOptions">
      <button class="sidebar-fab-option sidebar-fab-icon-only" id="ticketBtn">
        <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm1 15h-2v-2h2v2zm0-4h-2V7h2v6z"/>
        </svg>
        <span class="fab-tooltip">Levantar incidente</span>
      </button>
    </div>

    <!-- Main FAB Button -->
    <div class="sidebar-icon sidebar-fab" id="sidebarFab" title="Opciones">
      <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" class="fab-icon-main">
