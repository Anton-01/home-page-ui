---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title}</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
</head>
<body>
  <slot />
</body>
</html>

<style is:global>
/* ============================================
   CSS VARIABLES
============================================ */
:root {
  --color-bg-primary: #0a1744;
  --color-bg-secondary: #0d1b4c;
  --color-module-bg: #1a3a8f;
  --color-module-hover: #2548a8;
  --color-accent-red: #dc2626;
  --color-accent-orange: #f59e0b;
  --color-gold: #c9a227;
  --color-text-white: #ffffff;
  --color-text-light: #e2e8f0;
  --color-calendar-bg: #f8fafc;
  --color-success: #10b981;
  --color-error: #ef4444;
  --sidebar-width: 80px;
  --header-height: 80px;
  --border-radius-sm: 8px;
  --border-radius-md: 12px;
  --border-radius-lg: 20px;
  --border-radius-xl: 30px;
  --transition-fast: 0.2s ease;
  --transition-normal: 0.3s ease;
}

/* ============================================
   RESET & BASE
============================================ */
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

body {
  font-family: 'Poppins', sans-serif;
  background-color: var(--color-bg-primary);
  color: var(--color-text-white);
  min-height: 100vh;
  overflow-x: hidden;
}

/* ============================================
   CUSTOM SCROLLBAR
============================================ */
::-webkit-scrollbar {
  width: 6px;
  height: 6px;
}

::-webkit-scrollbar-track {
  background: rgba(255, 255, 255, 0.05);
  border-radius: 10px;
}

::-webkit-scrollbar-thumb {
  background: rgba(201, 162, 39, 0.4);
  border-radius: 10px;
  transition: background 0.3s ease;
}

::-webkit-scrollbar-thumb:hover {
  background: rgba(201, 162, 39, 0.7);
}

* {
  scrollbar-width: thin;
  scrollbar-color: rgba(201, 162, 39, 0.4) rgba(255, 255, 255, 0.05);
}

/* ============================================
   ALERT SYSTEM
============================================ */
.alert-container {
  position: fixed;
  top: 20px;
  right: 20px;
  z-index: 2000;
  display: flex;
  flex-direction: column;
  gap: 10px;
  max-width: 380px;
}

.alert {
  padding: 16px 20px;
  border-radius: var(--border-radius-md);
  display: flex;
  align-items: center;
  gap: 12px;
  animation: slideInRight 0.3s ease-out;
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
  position: relative;
}

@keyframes slideInRight {
  from {
    opacity: 0;
    transform: translateX(100px);
  }
  to {
    opacity: 1;
    transform: translateX(0);
  }
}

.alert.hiding {
  animation: slideOutRight 0.3s ease-out forwards;
}

@keyframes slideOutRight {
  from {
    opacity: 1;
    transform: translateX(0);
  }
  to {
    opacity: 0;
    transform: translateX(100px);
  }
}

.alert-error {
  background: linear-gradient(135deg, var(--color-error) 0%, #dc2626 100%);
}

.alert-success {
  background: linear-gradient(135deg, var(--color-success) 0%, #059669 100%);
}

.alert-warning {
  background: linear-gradient(135deg, var(--color-accent-orange) 0%, #d97706 100%);
}

.alert-icon {
  width: 24px;
  height: 24px;
  flex-shrink: 0;
}

.alert-icon svg {
  width: 100%;
  height: 100%;
  fill: white;
}

.alert-content {
  flex: 1;
}

.alert-title {
  font-size: 14px;
  font-weight: 600;
  margin-bottom: 2px;
}

.alert-message {
  font-size: 13px;
  opacity: 0.9;
}

.alert-close {
  background: none;
  border: none;
  cursor: pointer;
  padding: 4px;
  opacity: 0.7;
  transition: var(--transition-fast);
}

.alert-close:hover {
  opacity: 1;
}

.alert-close svg {
  width: 16px;
  height: 16px;
  fill: white;
}

.alert-progress {
  position: absolute;
  bottom: 0;
  left: 0;
  height: 3px;
  background-color: rgba(255, 255, 255, 0.5);
  border-radius: 0 0 var(--border-radius-md) var(--border-radius-md);
  animation: progress 3s linear forwards;
}

@keyframes progress {
  from { width: 100%; }
  to { width: 0%; }
}
</style>
